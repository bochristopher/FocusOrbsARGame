<?xml version="1.0" encoding="utf-8"?>
<!-- Orb drawable: A bright green filled circle that represents the target orb -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Bright green fill for high visibility -->
    <solid android:color="#00FF00" />

    <!-- Slightly darker green stroke for depth -->
    <stroke
        android:width="2dp"
        android:color="#00CC00" />

    <!-- Size is controlled by the View dimensions, but we set a default -->
    <size
        android:width="60dp"
        android:height="60dp" />

</shape>

