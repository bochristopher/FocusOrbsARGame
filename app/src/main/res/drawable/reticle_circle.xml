<?xml version="1.0" encoding="utf-8"?>
<!-- Reticle drawable: A hollow green crosshair/ring that stays fixed at screen center -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer ring (hollow circle) -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#00DD00" />
            <solid android:color="@android:color/transparent" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>

    <!-- Center dot for precise aiming -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#00DD00" />
            <size
                android:width="8dp"
                android:height="8dp" />
        </shape>
    </item>

</layer-list>

