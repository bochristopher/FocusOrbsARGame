<?xml version="1.0" encoding="utf-8"?>
<!--
    Focus Orbs Game Layout (Step 2)
    - Black background for AR glasses compatibility
    - All elements in green/white (monochrome display)
    - Reticle fixed at center, orb spawns at random positions
    - Player uses head tilt to aim at orbs
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Level display at the top left -->
    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Level: 1"
        android:textColor="#00DD00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Score display at the top right -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="monospace"
        android:text="Score: 0"
        android:textColor="#00FF00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Focus progress indicator (shows how long you've been focused) -->
    <ProgressBar
        android:id="@+id/focusProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="120dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/focus_progress_drawable"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/scoreText"
        app:layout_constraintStart_toStartOf="@id/scoreText"
        app:layout_constraintTop_toBottomOf="@id/scoreText"
        tools:visibility="visible" />

    <!-- Center reticle - fixed at screen center (visual indicator only) -->
    <View
        android:id="@+id/reticle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/reticle_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- The orb - positioned programmatically, stays fixed until popped -->
    <View
        android:id="@+id/orb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/orb_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Flash overlay for pop effect -->
    <View
        android:id="@+id/flashOverlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:background="@drawable/flash_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
