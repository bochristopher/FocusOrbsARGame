<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FocusOrbsARGame" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Theme for Focus Orbs game - dark, fullscreen, no action bar -->
    <style name="Theme.FocusOrbsGame" parent="Theme.AppCompat.NoActionBar">
        <!-- Dark background for AR glasses -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Fullscreen immersive -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Status bar and navigation colors (black) -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>